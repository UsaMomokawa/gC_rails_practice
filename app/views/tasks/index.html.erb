<%= link_to '新規作成', new_task_path %>

<h1>タスク一覧</h1>
<table>
  <thead>
    <tr><th>メンバー</th><th>タイトル</th></tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.member.name %></td>
        <td><%= task.title %></td>
        <td><%= link_to '詳細', task_path(task) %></td>
        <td><%= link_to '削除', task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
